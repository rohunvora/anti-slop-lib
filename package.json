{
  "name": "anti-slop",
  "version": "1.0.0",
  "description": "Detect and prevent AI-generated 'slop' aesthetic in web projects",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "anti-slop": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build",
    "scrape:godly": "npx ts-node scripts/godly-scraper.ts"
  },
  "keywords": [
    "ai",
    "design",
    "linter",
    "tailwind",
    "ui",
    "slop",
    "vibecode",
    "aesthetic"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2"
  },
  "engines": {
    "node": ">=18"
  }
}

